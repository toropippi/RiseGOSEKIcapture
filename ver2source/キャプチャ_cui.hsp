//スクリーンキャプチャ
*capture
	buffer 29:picload flst.cnt
	x29=ginfo(12)
	y29=ginfo(13)
	if (x29==1920)&(y29==1280){
		gsel 3
		pos 0,0
		gcopy 29,capx,capy,wx,wy
	}else{
		gsel 30
		pos 0,0
		if x29\4!=0{
			gzoom 1920,1080,29,0,0,x29,y29,1
		}else{
			gosub*HCLgzoomfunc
		}
		gsel 3
		pos 0,0
		gcopy 30,capx,capy,wx,wy
	}
	return

