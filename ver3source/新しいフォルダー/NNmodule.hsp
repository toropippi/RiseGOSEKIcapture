//ロードは最初からサイズをあわせないといけない
//こっちはモジュール型ではなく64bit intのmemidをいれればいいやつ
#deffunc nploadm str fname,var A
	exist fname
	sz=strsize-128
	dim hostdata,strsize/4
	bload fname,hostdata
	HCLWriteBuffer A,hostdata,sz,0,128
	return
	
