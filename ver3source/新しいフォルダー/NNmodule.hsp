#deffunc npsave str fname,var A
	HCLdim_i32FromBuffer hostdata,A
	dim header,32
	header.0=1297436307
	header.1=88400
	header.2=662372470
	sdim saveout1,256
	raw=HCLBLAS_Get2DShape(A,0)
	col=HCLBLAS_Get2DShape(A,1)
